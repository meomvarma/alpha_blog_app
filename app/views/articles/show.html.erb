<h1 style="text-align: center;">Showing Article Details</h1>
<h5 style="text-align: center;">by <%= @article.user.username if @article.user %></h5>
<p style="text-align: center;"><%= link_to gravatar_for(@article.user), user_path(@article.user) %></p>
<p style="text-align: center;"><strong>Title: </strong> <%= @article.title %> </p>
<p style="text-align: center;"><strong>Description: </strong><%= @article.description %> </p>

<h4 style="text-align: center;"><%= link_to 'Edit', edit_article_path(@article) %></h3> 
<h4 style="text-align: center;"><%= link_to 'Delete', article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %></h3> 
<h4 style="text-align: center;"><%= link_to 'Return to Article Listing', articles_path %></h3> 


