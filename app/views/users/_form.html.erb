<%= render 'shared/errors', obj:@user%>

<%= form_with(model: @user, data: { turbo: false }, local: true) do |f| %>

  <p> 
    <%= f.label :username %><br/> 
    <%= f.text_field :username %>
  </p>

  <p>
  <%= f.label :email %> <br> 
  <%= f.email_field :email %>
  </p>

  <p>
  <%= f.label :password %> <br> 
  <%= f.password_field :password %>
  </p>

  <p>
  <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account") %>
  </p>

  <%= link_to '[Cancel and return to articles listing ]', articles_path    %>  


<% end %>