<head>
  <style>
    /* Center the container horizontally */
    .center-table {
      display: flex;
      justify-content: center;
      align-items: center;
      /* height: 100vh; Adjust this value for vertical centering if needed */
    }
  </style>
</head>

<h1 style="text-align: center;"><%= @user.username %>'s profile</h1>

<p style="text-align: center;"><%= gravatar_for @user, size: 100  %></p>

<h3 style="text-align: center;"><%= link_to 'Edit your profile', edit_user_path(@user) %></h3>

<h3 style="text-align: center;">Articles</h3>

<div class="center-table">
  <table> 
    <thead >
     <tr>
      <th style="padding: 15px;">Title</th> 
      <th style="padding: 15px;">Description</th>
      <th colspan="3">Actions</th>
     </tr>
    </thead>

    <tbody >
    <% @articles.each do |article| %> 
     <tr>
     <td style="padding: 7px;"><%= article.title %></td>
     <td style="padding: 5px;"><%= article.description %></td>
     <%# <td>Placeholder</td> %>
     <td><%= link_to 'Show', article_path(article) %></td>
     <td><%= link_to 'Edit', edit_article_path(article)  %></td>
     <td><%= link_to 'Delete', article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure"} %> </td>
     </tr>
    
    <% end %>
    </tbody>

  </table>
</div>

  <div class="flickr_pagination"> 
    <%= will_paginate @articles, :container => false %>
  </div>


